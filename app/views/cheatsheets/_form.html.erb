<%= simple_form_for(cheatsheet) do |f| %>
  <%= f.association :language, as: :radio_buttons, collection: Language.all.map{|language| [language.name, language.id, {class: "form-check-input radio_buttons required #{language.style}"}]} %>
  <%= f.input :title %>
  <%= f.input :snippet %>
  <%= f.association :tags, as: :check_boxes %>
  <%= f.submit "Save", class: " "  %>
<% end %>